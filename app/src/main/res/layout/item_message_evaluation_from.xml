<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/message_item_padding_bottom"
    android:paddingLeft="@dimen/message_item_padding_left"
    android:paddingRight="@dimen/message_item_padding_right">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/tv_send_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_head"
        android:textColor="@color/color_666666"
        android:textSize="11dp" />

    <LinearLayout
        android:id="@+id/layout_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_send_person_name"
        android:layout_toRightOf="@id/iv_head"
        android:background="@drawable/im_chat_msg_left_bg"
        android:gravity="center"
        android:minWidth="54dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:padding="8dp"
                android:text="@string/evaluation_tip"
                android:textColor="@color/message_text"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_evaluation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_btn_opt"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="8dp"
                android:text="@string/evaluation"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
