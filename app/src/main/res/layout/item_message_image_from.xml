<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/message_item_padding_bottom"
    android:paddingLeft="@dimen/message_item_padding_left"
    android:paddingRight="@dimen/message_item_padding_right">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/message_item_head_size"
        android:layout_height="@dimen/message_item_head_size"
        android:layout_marginRight="@dimen/message_item_head_margin" />

    <TextView
        android:id="@+id/tv_send_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_head"
        android:textColor="@color/color_666666"
        android:textSize="11dp" />

    <LinearLayout
        android:id="@+id/layout_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_send_person_name"
        android:layout_toRightOf="@id/iv_head"
        android:background="@drawable/im_chat_msg_left_bg"
        android:gravity="center"
        android:minWidth="54dp">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        <!--
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fresco:placeholderImage="@mipmap/im_image_loading"
            />
            -->
    </LinearLayout>

</RelativeLayout>